<style>
    /* Card Styling */
.card {
    border: 2px solid #d9e8e7 !important;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    border-radius: 12px;
}

.card:hover {
    transform: scale(1.05);
    box-shadow: 0 8px 20px rgba(0, 0, 0, 0.15);
    border-color: #75b3b0 !important;
}

.card-img-top {
    border-radius: 12px 12px 0 0;
    object-fit: contain;
}

/* Styling for Card Titles and Text */
.card-title {
    font-size: 1.25rem;
    font-weight: 600;
}

.card-text {
    font-size: 1rem;
    font-weight: 400;
    color: #1F2833;
}

/* Listing Link */
.listing-link {
    text-decoration: none;
    color: inherit;
    display: block;
}

/* Responsive Spacing for Cards */
.row-cols-lg-3 .col, .row-cols-md-2 .col, .row-cols-sm-1 .col {
    margin-bottom: 2rem;
}

/* Shadow and Hover Effect */
.card {
    background-color: #FFF;
    transition: all 0.3s ease-in-out;
}

.card:hover {
    box-shadow: 0px 6px 12px rgba(0, 0, 0, 0.1);
}


</style>
<% layout("/layouts/boilerplate.ejs") %>
<body>
    <div class="container my-5">
        <h2 class="text-center mb-4">All Services</h2>
        <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 g-4">
            <% for(listing of allListings) { %>
                <div class="col">
                    <a href="/listings/<%= listing._id %>" class="listing-link text-decoration-none">
                        <div class="card listing-card h-100 border-0 shadow-sm border border-dark">
                            <img src="<%= listing.image.url %>" class="card-img-top object-contain-cover" alt="listing_image" style="height: 20rem; object-fit: cover;">
                            <div class="card-body">
                                <h5 class="card-title text-dark"><b><%= listing.title %></b></h5>
                                <p class="card-text text-dark">$<%= listing.price %> per user/month</p>
                            </div>
                        </div>
                    </a>
                </div>
            <% } %>
        </div>
    </div>
</body>
